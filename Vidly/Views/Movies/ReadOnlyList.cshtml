@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>



<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable({
                // AJAX Source
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                // COLUMN DATA
                columns: [
                    {   // Col 1: Movie Name
                        data: "name"
                    },
                    {   // Col 2: Genre
                        data: "genre.name"
                    }
                ]
            });

        });
    </script>
}